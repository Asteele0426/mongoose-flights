<%- include('../partials/header') %>

<section id="show-page">
  <div>Airline: </div>
  <div><%= flight.airline %></div>
  <div>Airport: </div>
  <div><%= flight.airport %></div>
  <div>Flight Number: </div>
  <div><%= flight.flightNo %></div>
  <div>Departs: </div>
  <div><%= flight.departs %></div>
  
</section>

<div>Tickets</div>
<ul>
  <%- tickets.map(t =>
  `<li>${t.seat}</li>`) %>
</ul>


  
  <% if (flight.destinations.length) { %>
    <table>
      <thead>
        <tr>
          <th>Destination</th>
          <th>Arrival</th>
        </tr>
      </thead>
      <tbody>
        <% flight.destinations.forEach(function(r) { %>
          <tr>
            <!-- .toLocaleDateString() provides a more friendly date format -->
            
            <td><%= r.destination %></td>
            <td><%= r.arrival %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } %>
  <br><br><h2>Add Destination</h2>
<form id="add-destination-form" method="POST"
  action="/flights/<%= flight._id %>/destination">
  <label>Destination:</label>
  <select name="airport"><option value="DFW">DFW</option><option value="AUS">AUS</option><option value="DEN">DEN</option><option value="LAX">LAX</option><option value="SAN">SAN</option></select>
  <label>Arrival:</label>
  <input type="date" name="Arival">
  <select name="rating">
  <input type="submit" value="Add Destination">
  

</form>

<form id="add-ticket-form" action="/tickets/<%= flight._id %>" method="POST">
    <label>seat:</label>
    <input type="text" name="seat" required pattern="[A-F][1-9]\d?">
    <label>price:</label>
    <input type="number" name="price">
    <input type="submit" value="Add Ticket">
  </form>  

       
<%- include('../partials/footer') %>
